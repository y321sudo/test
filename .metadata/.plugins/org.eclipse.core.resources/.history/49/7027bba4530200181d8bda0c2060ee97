public class Main {

	public static void main(String[] args) {
		Yuusha yuusha=new Yuusha();
		Hakase hakase=new Hakase();

		System.out.println(hakase.getName()+":やぁ、見ない顔だな。君の名前を教えてくれたまえ。");
		System.out.println(yuusha.getName()+":"+"こんにちは!私は"+yuusha.getName()+"と言います！");
		System.out.println();

		System.out.println(hakase.getName()+":"+yuusha.getName()+"、早速だが君にはポケモンを与えよう。\nこの3つの卵から選んでね。");
	}

}
